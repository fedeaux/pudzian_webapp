<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <h4><%= t('.sign_in', :default => "Sign in") %></h4>
  </div>
  <div class="panel-body">
    <div class="form" role="form">
      <div class="form-group">
        <%= label_tag :email %>
        <%= email_field_tag :email, nil, autofocus: true,
            class: "form-control",
            ng_model: 'users_ctrl.credentials.email' %>

      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, autocomplete: "off",
            class: "form-control",
            ng_model: 'users_ctrl.credentials.password' %>

      </div>
      <%= submit_tag t('.sign_in', :default => "Sign in"), class: "btn btn-primary", ng_click: 'users_ctrl.login()' %>
    </div>
  </div>
</div>
